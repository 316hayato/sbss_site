<div class="container">
  <h2 class="font-weight-bold"><%= "#{@customer.last_name}#{@customer.first_name}" %>さんの会員詳細</h2>
  <div class="row my-4 d-flex justify-content-center">
    <div class="col-auto pt-3 bg-white text-border">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= "#{@customer.last_name}　#{@customer.first_name}" %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= "#{@customer.last_name_kana}　#{@customer.first_name_kana}" %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.telephone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <% if @customer.is_deleted %>
              <p class="text-secondary">退会</p>
            <% else %>
              <p class="text-success">有効</p>
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
  <div class="row mt-3">
    <%= link_to "編集する",edit_admin_customer_path(@customer.id), class:"btn btn-success mx-auto" %>
  </div>
</div>
