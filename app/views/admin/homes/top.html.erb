<div class="container p-4">
  <h3 class="font-weight-bold my-3 ml-5">依頼履歴一覧</h3>
  <div class="row m-auto p-auto">
    <table class="table">
      <thead>
        <tr>
          <th>申請日時</th>
          <th>依頼者</th>
          <th>利用冊数</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @requests.each do |request| %>
        <tr>
          <th><%= link_to request.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_request_path(request.id) %></th>
          <th><%= request.address_name %></td>
            <% total = 0 %>
            <% request.request_details.each do |request_detail| %>
              <% total += request_detail.amount %>
            <% end %>
          <td><%= total %></td>
          <th></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>