<div class="container p-4">
  <h3 class="font-weight-bold ml-5">サービス編集</h3>
  <%= form_with model: @question, url: admin_question_path(@question) do |f| %>
  <div class="d-flex justify-content-center m-4">
    <div class="row">
      <table>
        <tbody>
          <tr>
            <th>問い合わせ名</th>
            <td><%= f.text_field :questions_name, size: 35 %></td>
          </tr>
          <tr>
            <th>内容</th>
            <td><%= f.text_area :questions_introduction, size: "38x5" %></td>
            </tr>
          <tr>
            <th>回答ステータス</th>
            <th>

            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center m-1">
    <%= f.submit "変更を保存", class:"btn btn-success m-2 px-4 py-2" %>
  </div>
  <% end %>
</div>
