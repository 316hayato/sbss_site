<div class="container">
  <h2 class="font-weight-bold">問い合わせ内容編集</h2>
  <%= form_with model: @question, url: admin_question_path(@question) do |f| %>
  <div class="row m-3 d-flex justify-content-center">
    <div class="col-auto pt-3 bg-white text-border">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>問い合わせ名</th>
            <th><%= @question.questions_name %></th>
          </tr>
          <tr>
            <th>内容</th>
            <th><%= @question.questions_introduction %></th>
          </tr>
          <tr>
            <th>回答</th>
            <th><%= f.text_area :questions_solution, size: "40x5" %></th>
          </tr>
          <tr>
            <th>回答ステータス</th>
            <th>
              <%= f.radio_button :is_answer, false %><%= f.label :is_answer, "未回答" %>
              <%= f.radio_button :is_answer, true %><%= f.label :is_answer, "回答済み" %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center m-1">
    <%= f.submit "変更を保存", class:"btn btn-success m-2 px-4 py-2" %>
  </div>
  <% end %>
</div>
