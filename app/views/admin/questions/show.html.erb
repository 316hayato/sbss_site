<div class="container">
  <h2 class="font-weight-bold">問い合わせ詳細</h2>
  <div class="row my-3 d-flex justify-content-center">
    <div class="col-auto pt-3 bg-white text-border">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>問い合わせ名</th>
          <th><%= @question.questions_name %></th>
        </tr>
        <tr>
          <th>詳細説明</th>
          <th><%= @question.questions_introduction %></th>
        </tr>
        <tr>
          <th>問い合わせ回答</th>
          <th><%= @question.questions_solution %></th>
        </tr>
        <tr>
          <th>回答ステータス</th>
          <th>
                <% if @question.is_answer %>
                  <p class="text-secondary font-weight-bold">回答済み</p>
                <% else %>
                  <p class="text-success font-weight-bold">未回答</p>
                <% end %>
              </th>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "編集する",edit_admin_question_path, class:"btn btn-success m-3 py-2 px-4" %>
  </div>
</div>