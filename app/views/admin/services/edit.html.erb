<div class="container">
  <h3 class="font-weight-bold ml-5">サービス編集</h3>
  <%= form_with model: @service, url: admin_service_path(@service) do |f| %>
  <div class="d-flex justify-content-center m-4">
    <div class="row bg-white text-border pt-3 px-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>画像</th>
            <td><%= f.file_field :image, accept: "image/*"  %></td>
          </tr>
          <tr>
            <th>サービス名</th>
            <td><%= f.text_field :service_name, size: 35 %></td>
          </tr>
          <tr>
            <th>サービス説明</th>
            <td><%= f.text_area :service_introduction, size: "38x5" %></td>
            </tr>
          <tr>
            <th>税抜価格</th>
            <td><%= f.text_field :price, size: 35 %></td>
          </tr>
          <tr>
            <th>提供ステータス</th>
            <th>
              <%= f.radio_button :is_active, false %><%= f.label :is_active, "利用可能" %>
              <%= f.radio_button :is_active, true %><%= f.label :is_active, "利用停止" %>
            </th>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center m-1">
    <%= f.submit "変更を保存", class:"btn btn-success m-2 px-4 py-2" %>
  </div>
  <% end %>
</div>