<div class="container p-4">
  <div class="row m-3">
    <div class="col text-left ml-5">
      <h3 class="font-weight-bold ml-5">サービス一覧</h3>
    </div>
    <div class="col text-right">
      <%= link_to "新規登録",new_admin_service_path %>
    </div>
  </div>
  <div class="row m-4">
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>
      <tbody>
        <% @services.each do |service| %>
        <tr>
          <td><%= service.id %></td>
          <td><%= link_to service.service_name, admin_service_path(service.id) %></td>
          <td><%= number_with_delimiter(service.price, delimiter: ',') %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>