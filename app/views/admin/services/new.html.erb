<div class="container">
  <h2 class="font-weight-bold ml-5">サービス新規登録</h2>
  <%= form_with model: @service, url: admin_services_path, method: :post do |f| %>
  <div class="d-flex justify-content-center m-4">
    <div class="row bg-white text-border pt-3 px-3">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>画像</td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td>サービス名</td>
          <td><%= f.text_field :service_name, placeholder:"サービス名", size: 35 %></td>
        </tr>
        <tr>
          <td>サービス説明</td>
          <td><%= f.text_area :service_introduction, placeholder:"ここに説明文を記述します", size: "38x5" %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, placeholder:"1000", size: 35 %>　円</td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
  <div class="d-flex justify-content-center m-1">
    <%= f.submit '新規登録', class:"btn btn-success m-2 px-4 py-2" %>
  </div>
  <% end %>
</div>