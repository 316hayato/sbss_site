<div class="container">
  <h2 class="font-weight-bold">マイページ</h2>
  <div class="row mt-4">
    <h4 class="font-weight-bold">登録情報</h4>
    <% if @customer.email != 'guest@example.com' %>
      <p><%= link_to "編集する",customers_my_page_edit_path, class:"btn btn-sm btn-success ml-3" %></p>
    <% end %>
  </div>
  <div class="row mypege p-3 bg-white text-border">
    <table class="table table-bordered" bgcolor="#FFFFFF">
      <tbody>
          <tr>
            <th>氏名</th><td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>カナ</th><td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th><td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th><td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th><td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th><td><%= @customer.email %></td>
          </tr>
        </tbody>
    </table>
  </div>
  <% if @customer.email != 'guest@example.com' %>
  <div class="row flex-column">
    <h4 class="font-weight-bold">申し込み履歴</h4>
    <p>詳細は<%= link_to "こちら",requests_path %></p>
    <h4 class="font-weight-bold">問い合わせ履歴</h4>
    <p>詳細は<%= link_to "こちら",questions_path %></p>
  <% end %>
  </div>
</div>
