<div class="container p-4">
  <div class="row">
    <div class="col text-left">
      <h3>依頼リスト</h3>
    </div>
    <div class="col text-right">
      <%= link_to "リストを空にする", destroy_all_request_lists_path, class:"btn btn-sm btn-danger", method: :delete %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="font-weight-bold h5">サービス名</th>
          <th class="font-weight-bold h5">利用冊数</th>
          <th class="font-weight-bold h5">単価(税込)</th>
          <th class="font-weight-bold h5"></th>
        </tr>
      </thead>
      <% if current_customer %>
      <tbody>
        <% @request_lists.each do |request_list| %>
        <tr>
          <td><%= request_list.service.service_name %></td>
          <td>
            <%= form_with model: request_list, url: request_list_path(request_list) do |f| %>
              <%= f.select :amount, options_for_select(*[1..1000], request_list.amount) %>
              <%= f.submit "変更", class:"btn btn-sm btn-success", method: :patch %>
            <% end %>
          </td>
          <td><%= number_with_delimiter(request_list.service.with_tax_price, delimiter: ',') %></td>
          <th class="text-center"><%= link_to "削除する",request_list_path(request_list.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
        </tr>
        <% end %>
      </tbody>
      <% end %>
    </table>
  </div>
  <div class="row">
    <div class="col text-left">
      <%= link_to "買い物を続ける", services_path, class:"btn btn-primary ml-3" %>
    </div>
    <div class="col-3 mx-auto text-right">
      <table class="table table-bordered">
        <tbody>
          <th>合計金額</th>
          <td><%= number_with_delimiter(@total_amount, delimiter: ',') %></td>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center">
  <% if @request_lists.any? %>
    <%= link_to "情報入力に進む", new_request_path, class:"btn btn-success" %>
  <% else %>
    <p>データがありません</p>
  <% end %>
  </div>
</div>