<% if customer_signed_in? %>
  <div class="search_form">
  <!---------------------------------------------------------------------------------------------->
  <!--検索対象が「サービス」のみ場合-->
  <!--検索対象が複数の場合はコメントアウト(<% if false %><% end %>)を有効にする-->

    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <!--入力フォーム-->
      <%= f.text_field :word %>
      <!--検索ボタン-->
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>

  <!---------------------------------------------------------------------------------------------->
  <!--検索対象が複数ある場合-->
  <!--コメントアウト(<% if false %><% end %>)を外す-->

  <% if false %>
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <!--入力フォーム-->
      <%= f.text_field :word %>
      <!--検索対象-->
      <%= f.select :range, options_for_select([["サービス名",'Service'], ["検索対象名(任意)",'モデル名']]) %>
      <!--追加オプション(任意)-->
        <!--一致条件-->
        <!--
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"], ["一致名(画面表示)",'一致名(引数)']]) %>
        -->
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  <% end %>
  <!---------------------------------------------------------------------------------------------->
  </div>
<% end %>