<div class="container">
  <div class="row p-5">
    <h2 class="font-weight-bold">サービス一覧(全<%= @services.count %>件)</h2>
    <div class="col-12">
      <div class="row">
        <% @services.each do |service| %>
          <div class="item-box mx-auto">
            <%=link_to service_path(service.id) do %>
            <%= image_tag service.image, size: "350x250" %>
            <% end %>
            <p><%= link_to service.service_name, service_path(service.id) %></p>
            <p>¥ <%= number_with_delimiter(service.price, delimiter: ',') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
