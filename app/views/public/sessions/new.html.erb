<%= render "public/shared/error_messages", resource: resource %>
<div class="">
  <div class="container">
    <h3 class="font-weight-bold mb-3 mt-1">ログイン</h3>
    <div class="row">
      <%= form_with model: @customer, url: customer_session_path do |f| %>
      <div class="col-12 m-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", size: "30" %>
      </div>
      <div class="col-12 m-1">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="col-12 m-1">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>
      <div class="col-12 m-1">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
      <% end %>
      <div class="col-12 m-1">
        <%= link_to 'ゲストログイン（閲覧用）', customers_guest_sign_in_path, method: :post, class: "btn btn-success" %>
      </div>
    </div>
    <div class="row">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>

