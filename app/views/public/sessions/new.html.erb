<%= render "public/shared/error_messages", resource: resource %>
<div>
  <div class="container">
    <div class="form-signin w-100 m-auto">
      <%= form_with model: @customer, url: customer_session_path do |f| %>
      <%= image_tag "book_icon.jpg", class: "mb-4", size: '82x57' %>
      <h3 class="font-weight-bold mb-3 mt-1 fw-normal">ログイン</h3>
      <div class="form-floating">
        <%= f.email_field :email, class: "form-control", placeholder: "name@example.com", size: "30" %>
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        <%= f.label :password, "パスワード" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="form-check text-start my-3">
        <%= f.check_box :remember_me, class: "form-check-input"  %>
        <%= f.label :remember_me, "Remember me", class: "form-check-label", for: "flexCheckDefault" %>
      </div>
      <% end %>
      <%= f.submit "ログイン", class: "btn btn-success w-100 py-2" %>
      <%= render "public/shared/links" %>
      <% end %>
      <div class="mt-5 mb-3 text-body-secondary">
        <h3 class="font-weight-bold mb-3 mt-1 fw-normal">ゲストログイン（閲覧用）</h3>
        <%= link_to 'ログイン', customers_guest_sign_in_path, method: :post, class: "btn btn-primary w-100 py-2" %>
      </div>
    </div>
  </div>
</div>

